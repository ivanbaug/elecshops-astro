<script>
  const btnNavbar = document.querySelector('#btn-menu-navbar') as HTMLButtonElement
  const btnDarkMode = document.querySelector('#btn-dark-mode') as HTMLButtonElement
  const btnLightMode = document.querySelector('#btn-light-mode') as HTMLButtonElement
  const menuNavbar = document.querySelector('#navbar-default') as HTMLElement

  btnNavbar.addEventListener('click',()=>{
    menuNavbar.classList.toggle('hidden');
  });
  const fnToggle = () => {
    if (
				localStorage.theme === "dark" ||
				(!("theme" in localStorage) &&
					window.matchMedia("(prefers-color-scheme: dark)").matches)
			) {
				document.documentElement.classList.add("dark");
			} else {
				document.documentElement.classList.remove("dark");
			}
  }

  fnToggle();

  btnDarkMode.addEventListener('click',()=>{
    localStorage.theme = 'dark';
    fnToggle();
  });

  btnLightMode.addEventListener('click',()=>{
    localStorage.theme = 'light';
    fnToggle();
  });

</script>